<section id="dropzone" class="content upload">
<div class="hint">
  <p>Drag file here or tap anywhere</p>
</div>
<label class="file-picker">
  {{view Sharesome.UploadFileSelectView contentBinding='content'}}
</label>
</section>

{{#if fileToUpload}}
  {{#if isUploading}}
    <section class="content upload-in-progress">
      {{spinner height=300 width=5 radius=30 color='#222' top='auto' left='auto'}}
      <p>Uploading<p>
    </section>
  {{else}}
    <section class="content upload-preview">
      <div class="upload-preview">
        {{#if fileIsImage}}
        <div id="file-preview" class="image">
          <img {{bind-attr src=base64}}>
        </div>
        {{else}}
        <div id="file-preview" {{bind-attr class="simpleFileType"}}>
          <p>icon for CSS class<br><code>#filepreview.{{simpleFileType}}</code></p>
        </div>
        {{/if}}
        <p class="meta-data">
          <span class="name">{{name}}</span>
          <span class="size">{{humanFileSize size}}</span>
        </p>
        <p class="actions">
          <button {{action submitFileUpload}} class="upload">Upload</button>
          <button {{action cancelFileUpload}} class="cancel">Cancel</button>
        </p>
      </div>
    </section>
  {{/if}}
{{/if}}
